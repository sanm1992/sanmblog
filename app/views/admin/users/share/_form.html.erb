<h3 style="text-align: center;"><%= @user.new_record? ? '新建后台账号' : '编辑后台账号' %></h3>

<%= form_for @user ,url: { action: (@user.new_record? ? "create" : "update")} do |f| %>
	<% if @user.errors.any? %>
    <div id="error_explanation" class="form-group col-md-12 col-sm-12" style="color: red;">
      <h2>
        <%= pluralize(@user.errors.count, "个错误：") %>
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<div class="form-group col-md-12 col-sm-12">
		<%= f.label :name, '姓名:' ,class: "control-label"%>
  	<%= f.text_field :name, autofocus: true, class: "form-control", required: 'required', placeholder: "name" %>
	</div>
	
  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :email, '邮箱:', class: "control-label"%><br />
    <%= f.email_field :email, class: "form-control", required: 'required', placeholder: "Email" %>
  </div>
  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :password, '密码', class: "control-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control",  placeholder: "Password"%>
  </div>

  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :password_confirmation , '确认密码', class: "control-label" %><br />
    <%= f.password_field :password_confirmation , autocomplete: "off", class: "form-control",  placeholder: "Password"%>
  </div>

  <div class="col-sm-12">
  	<%= submit_tag "保存", class: "btn btn-primary" %>
  </div>
<% end %>