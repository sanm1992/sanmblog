<h3 style="text-align: center;"><%= @article_tag.new_record? ? '新建文章标签' : '编辑文章标签' %></h3>

<%= form_for @article_tag ,url: { action: (@article_tag.new_record? ? "create" : "update")} do |f| %>
	<% if @article_tag.errors.any? %>
    <div id="error_explanation" class="form-group col-md-12 col-sm-12" style="color: red;">
      <h2>
        <%= pluralize(@article_tag.errors.count, "个错误：") %>
      </h2>
      <ul>
        <% @article_tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-12 col-sm-12">
		<%= f.label :name, '名称:' %>
  	<%= f.text_field :name , class: "form-control", required: 'required'%>
	</div>

	<div class="form-group col-md-12 col-sm-12">
		<%= f.label :code, '英文简称:' %>
  	<%= f.text_field :code , class: "form-control", required: 'required'%>
	</div>

	 <div class="col-sm-12">
  	<%= submit_tag "保存", class: "btn btn-primary" %>
  </div>
 <% end %>