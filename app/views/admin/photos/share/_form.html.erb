 <%= form_for @photo, url: {action: 'create'} do |f| %>
  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :category, '相册名:' %>
    <%= f.text_field :category , class: "form-control", required: 'required'%>
  </div>
  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :note, '描述:' %>
    <%= f.text_area :note , class: "form-control"%>
  </div>

  <div class="form-group col-md-12 col-sm-12">
    <%= f.label :file, '选择文件:' %>
    <%= f.file_field :file , class: "form-control", required: 'required'%>
  </div>

  <div class="col-sm-12">
    <%= f.submit "上传", class: "btn btn-primary" %>
  </div>
     
<% end %>